echo Running Qemu...
# -snapshot -full-screen
if [ ! "$OS" == "Windows_NT" ] ; then
  qemu -snapshot -full-screen -boot c -net nic -std-vga /dev/sdb
else
  qemu -snapshot -boot c -net nic -kernel-kqemu -std-vga \
    -L "C:\Program Files\Qemu\pc-bios" \
    \\\\.\\PHYSICALDRIVE1
fi
echo Simulation terminated.
