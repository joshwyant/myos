set -e

export PATH=/usr/local/cross/bin:usr/local/cross/i586-elf-bin:$PATH

echo Build started.
date

export DISKTYPE=FAT32
export DISKSIZE=33
export DEFINES="-D"$DISKTYPE" -DDEBUG"
if [ ! -d bin ] ; then mkdir bin; fi
if [ -e myos.sym ] ; then rm myos.sym; fi

cd bootsect
echo compiling boot sector...
if [ ! -d obj ] ; then mkdir obj; fi
nasm bootsect.asm $DEFINES -felf -o./obj/bootsect
i586-elf-ld -Ttext=0x7C00 --oformat=binary ./obj/bootsect -o../bin/bootsect
i586-elf-objcopy --change-section-address .text=0x7C00 ./obj/bootsect
i586-elf-nm -n ./obj/bootsect>>../myos.sym

cd ../osldr
echo building osldr...
if [ ! -d obj ] ; then mkdir obj; fi
nasm init.asm $DEFINES -felf -o./obj/init.o
nasm isr.asm $DEFINES -O2 -felf -o./obj/isr.o
i586-elf-gcc -c $DEFINES -O2 video.c -o ./obj/video.o
i586-elf-gcc -c $DEFINES -O2 disk.c -o ./obj/disk.o
i586-elf-gcc -c $DEFINES -O2 fat.c -o ./obj/fat.o
i586-elf-gcc -c $DEFINES -O2 elf.c -o ./obj/elf.o
i586-elf-gcc -c $DEFINES -O2 osldr.c -o ./obj/osldr.o
i586-elf-ld -Tosldr.ld
i586-elf-objcopy ./obj/osldr ../bin/osldr -O binary
i586-elf-nm -n ./obj/osldr>>../myos.sym

cd ../kernel
echo building kernel...
if [ ! -d obj ] ; then mkdir obj; fi
nasm startup.S $DEFINES -O2 -felf -o./obj/startup.o
nasm isr.asm $DEFINES -O2 -felf -o./obj/isr.o
i586-elf-gcc -c $DEFINES -O2 video.c -o ./obj/video.o
i586-elf-gcc -c $DEFINES -O2 disk.c -o ./obj/disk.o
i586-elf-gcc -c $DEFINES -O2 fat.c -o ./obj/fat.o
i586-elf-gcc -c $DEFINES -O2 elf.c -o ./obj/elf.o
i586-elf-gcc -c $DEFINES -O2 kernel.c -o ./obj/kernel.o
i586-elf-gcc -c $DEFINES -O2 dictionary.c -o ./obj/dictionary.o
i586-elf-ld -s -shared -Tkernel.ld
i586-elf-ld -s -shared -Tkernel.ld -o ./obj/kernel -Ttext=0xC0000000
i586-elf-nm -n -D ./obj/kernel>>../myos.sym

cd ../vesadrvr
echo building vesadrvr.o...
if [ ! -d obj ] ; then mkdir obj; fi
nasm $DEFINES -O2 -felf vesadrvr.asm -o./obj/vesa_asm.o
i586-elf-gcc -c $DEFINES -O2 vesadrvr.c -o ./obj/vesa_c.o
i586-elf-ld -i ./obj/vesa_c.o ./obj/vesa_asm.o -o ../bin/vesadrvr.o

cd ../shell
echo building shell...
if [ ! -d obj ] ; then mkdir obj; fi
nasm $DEFINES -O2 -felf crt0.S -o./obj/crt0.o
i586-elf-gcc -c $DEFINES -O2 shell.c -o ./obj/shell.o
i586-elf-ld ./obj/crt0.o ./obj/shell.o -o../bin/shell
i586-elf-nm -n ../bin/shell>>../myos.sym

echo Build Completed.
